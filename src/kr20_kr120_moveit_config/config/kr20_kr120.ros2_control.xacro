                <state_interface name="position">
                  <param name="initial_value">${initial_positions['kr120_link3__link4']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="kr120_link4__link5">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['kr120_link4__link5']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="kr120_link5__flange">
