                <state_interface name="position">
                  <param name="initial_value">${initial_positions['kr20_link2__link3']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="kr20_link3__link4">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['kr20_link3__link4']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="kr20_link4__link5">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['kr20_link4__link5']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="kr20_link5__flange">
                <command_interface name="position"/>
                <state_interface name="position">
                  <param name="initial_value">${initial_positions['kr20_link5__flange']}</param>
                </state_interface>
                <state_interface name="velocity"/>
            </joint>
            <joint name="kr120_base_link__link1">
