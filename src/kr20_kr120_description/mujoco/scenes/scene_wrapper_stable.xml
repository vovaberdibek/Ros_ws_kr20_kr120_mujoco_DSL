<mujoco model="cell_wrapper">
  <!-- Make path handling robust -->
  <compiler angle="radian" meshdir="." texturedir="." autolimits="true"/>

  <!-- Good physics defaults -->
  <option timestep="0.002" gravity="0 0 -9.81" integrator="RK4" iterations="100" tolerance="1e-8"/>

  <!-- Global defaults: turn OFF collisions for imported link meshes,
       add some damping/armature so nothing rings violently -->
  <default>
    <joint damping="5" armature="0.02" stiffness="0"/>
    <geom  contype="0" conaffinity="0" rgba="0.78 0.78 0.82 1"/>
  </default>

  <!-- Light visuals -->
  <asset>
    <material name="link_mat" rgba="0.80 0.82 0.86 1"/>
  </asset>

  <!-- Include the robot by ABSOLUTE path so CLI loading never appears empty -->
  <include file="/home/user/Desktop/mujoco_cell/robot_mjcf.xml"/>

  <worldbody>
    <light pos="3 3 4" dir="-1 -1 -1" cutoff="100" exponent="1"/>
    <geom type="plane" size="10 10 0.1" rgba="0.9 0.95 1 1" contype="1" conaffinity="1"/>

    <!-- Camera positioned to see the whole cell -->
    <body name="look" pos="2 -2 2">
      <camera name="cam1" mode="fixed" fovy="45" pos="0 0 0" quat="0.5 -0.5 0.5 -0.5"/>
    </body>
  </worldbody>
</mujoco>
