<mujoco model="kuka_scene">
  <compiler angle="radian" autolimits="true"/>
  <size njmax="4000" nconmax="800"/>

  <!-- Stable integrator + lots of constraint iters -->
  <option timestep="0.001" gravity="0 0 -9.81" integrator="implicit" iterations="200" tolerance="1e-9">
    <flag warmstart="enable"/>
  </option>

  <default>
    <!-- Extra joint damping + armature tame gravity torques -->
    <joint damping="8" armature="2.0"/>
    <!-- Soft contact + reasonable friction to avoid impulses -->
    <geom friction="0.6 0.01 0.001" solimp="0.9 0.995 0.0005" solref="0.015 1.0"/>
  </default>

  <!-- your cell -->
  <include file="/home/user/Desktop/mujoco_cell/robot_mjcf.xml"/>
  <include file="/home/user/Desktop/mujoco_cell/actuators_auto.xml"/>

  <worldbody>
    <geom name="floor" type="plane" size="5 5 0.1" rgba="0.85 0.9 1 1" contype="1" conaffinity="255"/>
    <light pos="3 3 4" dir="-1 -1 -1"/>
  </worldbody>
</mujoco>
